<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/singleRowChapterMainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    app:strokeColor="@color/black"
    app:strokeWidth="0.5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp">

        <TextView
            android:id="@+id/txtChapterNameSingleRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chapter name"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/txtChapterDescriptionSingleRow"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txtChapterDescriptionSingleRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chapter Description"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/txtChapterNameSingleRow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>